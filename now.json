{
    "version": 2,
    "name": "sairah",
    "builds": [
        {
           "src": "/server.js", 
           "use": "@now/node-server", 
           "config": { "maxLambdaSize": "50mb" }
       },
       {
           "src": "/public/**", 
           "use": "@now/static"
       }
    ],
    "routes": [
        { "src": "/(dist|fonts|images|javascript|sass|uploads)/(.*)", "dest": "/public/$1/$2"},
        { "src": "/(.*)", "dest": "/server.js"}
    ],
     "env": {
        "NODE_ENV": "production",
        "DATABASE": "@database",
        "PORT": "80",
        "MAP_KEY": "@map_key",
        "SECRET": "@secret",
        "KEY": "cartapp",
        "SENDGRID_API": "@sendgrid_api"
    
},
    "public": true, 

    "github": {
        "enabled": false
      }

}